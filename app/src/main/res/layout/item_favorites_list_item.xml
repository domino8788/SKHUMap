<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="@dimen/favorites_container_size"
    android:layout_height="@dimen/favorites_container_size">

    <ImageView
        android:id="@+id/item_favorites_icon"
        android:layout_width="@dimen/favorites_icon_size"
        android:layout_height="@dimen/favorites_icon_size"
        tools:src="@drawable/ic_cafe"
        />

    <TextView
        android:id="@+id/item_favorites_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/default_text_size"
        tools:text="깐투치오" />
</LinearLayout>